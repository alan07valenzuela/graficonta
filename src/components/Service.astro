---
import { Image } from "astro:assets";
const {
  title,
  href = "#",
  imageSrc,
  imageAlt = "Imagen no encontrada",
} = Astro.props;
---

<a
  href={href}
  class="flex h-56 w-full max-w-90 min-w-40 rounded-md bg-linear-to-b from-white from-60% to-gray-500 transition hover:brightness-85">
  <div class="ml-6 flex flex-1/3 flex-col items-baseline justify-center">
    <h3 class="text-2xl">{title}</h3>
    <span class="text-sm text-blue-800 underline">{"Ver mÃ¡s >>"}</span>
  </div>
  <div class="relative flex-2/3">
    {
      imageSrc && (
        <Image
          src={imageSrc}
          alt={imageAlt}
          class="absolute right-0 h-full w-auto min-w-32 object-contain opacity-90"
        />
      )
    }
  </div>
</a>
