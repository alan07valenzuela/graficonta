---
const { questions } = Astro.props;

interface Question {
    question: string;
    answer: string;
}
---


<div
  id="accordion-collapse"
  data-accordion="collapse"
  class="w-full overflow-hidden rounded-base border border-default shadow-xs">

  {questions.map((q: Question, index: number) => (
    <h3 id={`accordion-collapse-heading-${index}`}>
        <button
        type="button"
        class={`flex hover:cursor-pointer w-full items-center text-start justify-between gap-3 ${index === 0 && "rounded-t-base"} border 
        border-x-0 border-t-0 border-gray-200 px-12 py-6 font-medium text-gray-600 hover:bg-gray-50 hover:text-blue-800`}
        data-accordion-target={`#accordion-collapse-body-${index}`}
        aria-controls={`accordion-collapse-body-${index}`}>
            <span class="text-2xl">{q.question}</span>
            <svg
                data-accordion-icon
                class="h-5 w-5 shrink-0 rotate-180 duration-200"
                aria-hidden="true"
                xmlns="http://www.w3.org/2000/svg"
                width="24"
                height="24"
                fill="none"
                viewBox="0 0 24 24">
                <path
                stroke="currentColor"
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="m5 15 7-7 7 7">
                </path>
            </svg>
        </button>
    </h3>
    <div
        id={`accordion-collapse-body-${index}`}
        class={`hidden border ${index === questions.lenght && "border-b-0"} border-s-0 border-e-0 border-t-0 border-gray-200`}
        aria-labelledby={`accordion-collapse-heading-${index}`}>
        <div class="px-12 py-6">
            <p class="mb-2 text-body">
                {q.answer}
            </p>
        </div>
    </div>))}